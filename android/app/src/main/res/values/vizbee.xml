    <!-- =============================================================== -->
    <!-- Basic Style Customization (Required)                            -->
    <!-- =============================================================== -->

    <!-- RemoteActivity theme -->
    <style name="Theme.Vizbee.Custom" parent="Theme.Vizbee.Futura">

        <!-- Your app launcher icon -->
        <item name="vzb_appIcon">@mipmap/ic_launcher</item>

        <!-- Your app's theme colors -->
        <!--
          1. Primary Color - this is typically the background color used on most of your app screens
          2. Secondary Color - this is the highlight or accent color used on buttons etc. in your app screens
          3. Tertiary Color - this is the text color used in most of your app screens

          Update the colors below to suit your app.
        -->
        <item name="vzb_primaryColor">#FFFFFF</item>
        <item name="vzb_secondaryColor">#E60000</item>
        <item name="vzb_tertiaryColor">#000000</item>

        <item name="vzb_widgetEnabledBackgroundColor">#19FFFFFF</item>
        <item name="vzb_widgetSelectedColor">#10000000</item>
        <!-- Your app's theme fonts -->
        <!--

          fonts in Assets:
          Provide fonts located in your assets folder including any nested directories.
          i.e 'yourFont.<extension>' or 'fonts/yourFont.<extension>.

          fonts in Resources:
          Provide fonts located in your res/font folder by simply specifying the name of the font file
          excluding any extension. i.e. 'yourFont'

          Update the fonts below to suit your app.
         -->
        <item name="vzb_primaryFont">sora_bold</item>
        <item name="vzb_secondaryFont">sora_regular</item>

        <!-- -->
        <!-- OVERLAY CARD -->
        <!-- -->

        <!--
            Customize the Overlay cards as shown here
            https://gist.github.com/vizbee/7e9613f76a546c8f9ed9087e91bdc7b1#customize-overlay-cards
        -->

        <item name="vzb_luminosityLayerOverlayStyle">@style/Theme.Vizbee.Custom.LuminosityLayerOverlayStyle</item>

        <item name="vzb_overlayTitleLabelStyle">@style/Theme.Vizbee.Custom.OverlayTitleLabelStyle</item>
        <item name="vzb_overlaySubtitleLabelStyle">@style/Theme.Vizbee.Custom.OverlaySubtitleLabelStyle</item>
        <item name="vzb_overlayCallToActionButtonStyle">@style/Theme.Vizbee.Custom.OverlayCallToActionButton</item>

        <!-- -->
        <!-- INTERSTITIAL CARD -->
        <!-- -->

        <!--
            Customize the Interstitial cards as shown here
            https://gist.github.com/vizbee/7e9613f76a546c8f9ed9087e91bdc7b1#customize-interstitial-cards
        -->

        <!-- Titles & subtitles -->
        <item name="vzb_textAppearanceTitle1">@style/Theme.Vizbee.Custom.TitleLabelStyle</item>
        <item name="vzb_titledImageViewTitleLabelStyle">@style/Theme.Vizbee.Custom.TitledImageViewTitleLabelStyle</item>
        <item name="vzb_titledImageViewSubtitleLabelStyle">@style/Theme.Vizbee.Custom.TitledImageViewSubTitleLabelStyle</item>

        <!-- Buttons -->
        <item name="vzb_callToActionButtonStyle">@style/Theme.Vizbee.Custom.CallToActionFilled</item>
        <item name="vzb_deviceStatusViewDisconnectButtonStyle">@style/Theme.Vizbee.Custom.CallToActionOutlined</item>

        <!-- -->
        <!-- SPECIFIC CARD ATTRIBUTES -->
        <!-- -->

        <!-- CastIntroduction Card -->
        <item name="vzb_overlayContentLayout_castIntroduction">@style/Theme.Vizbee.Custom.CastIntroductionOverlayContentLayout</item>

        <!-- SmartPlay Card -->
        <item name="vzb_smartPlayDeviceSelectionCardDeviceListViewOverlayStyle">@style/Theme.Vizbee.Custom.SmartPlayCardOverlayDeviceListView</item>

        <!-- AppInstall Card -->
        <item name="vzb_appInstall_textStyle">@style/Theme.Vizbee.Custom.AppInstallTextStyle</item>
        <item name="vzb_appInstall_subTextStyle">@style/Theme.Vizbee.Custom.AppInstallSubTextStyle</item>
        <item name="vzb_appInstall_refresh_buttonStyle">@style/Theme.Vizbee.Custom.MinorAction</item>

        <!-- Pairing Card -->
        <item name="vzb_pairingScreen_pinNumberStyle">@style/Theme.Vizbee.Custom.PinCodeNumber</item>
        <item name="vzb_pairingScreen_numPadButtonStyle">@style/Theme.Vizbee.Custom.PairingPinPadButton</item>
        <item name="vzb_pairingScreen_numPadSubmitButtonStyle">@style/Theme.Vizbee.Custom.PairingPinPadSubmitButton</item>
        <item name="vzb_pairingScreen_numPadDeleteButtonStyle">@style/Theme.Vizbee.Custom.PairingPinDeleteButton</item>
        <item name="vzb_pairingScreen_refresh_buttonStyle">@style/Theme.Vizbee.Custom.MinorAction</item>

        <!-- =============================  -->
        <!-- App install screen style -->
        <!-- =============================  -->

        <item name="vzb_appInstall_televisionStyle">@style/VZB_TelevisionView.Custom</item>
        <item name="vzb_appInstall_leaderChainStyle">@style/VZB_AppInstallLeaderChainIconStyle.Custom</item>
        <item name="vzb_appInstall_remoteControllerIconStyle">@style/VZB_AppInstallRemoteControllerIconStyle.Custom</item>
        <item name="vzb_appInstall_cancelButtonColor">?attr/vzb_secondaryColor</item>
        <item name="vzb_appInstall_progressSpinnerColor">?attr/vzb_secondaryColor</item>
        <item name="vzb_appInstall_select_textStyle">@style/VZB_AppInstallSelectTextStyle.Custom</item>

        <!-- Player Card -->
        <item name="vzb_playerControlsStackViewStyle">@style/Theme.Vizbee.Custom.PlayerControlsStackView</item>
        <item name="vzb_videoPlayerControlButtonStyle">@style/Theme.Vizbee.Custom.VideoPlayerControlButton</item>
        <item name="vzb_playerControlsViewPlayPauseButtonStyle">@style/Theme.Vizbee.Custom.VideoPlayerPlayPauseButton</item>

        <!-- Video & Audio SeekBars -->
        <item name="vzb_seekBarVideoStyle">@style/Theme.Vizbee.Custom.VideoControlSeekBar</item>
        <item name="vzb_videoControlSeekBarLabelStyle">@style/Theme.Vizbee.Custom.VideoControlSeekBarLabel</item>
        <item name="vzb_seekBarAudioStyle">@style/Theme.Vizbee.Custom.AudioControlSeekBar</item>

        <!-- -->
        <!-- SPECIFIC VIEW ATTRIBUTES -->
        <!-- -->

        <!-- Used both in App install and Device Status View -->
        <item name="vzb_deviceSelection_vizbeeIconStyle">@style/Theme.Vizbee.Custom.AnimatedVizbeeIcon</item>

        <!-- Device Status view -->
        <item name="vzb_deviceStatusViewStyle">@style/Theme.Vizbee.Custom.DeviceStatusView</item>
        <item name="vzb_deviceStatusViewLabelStyle">@style/Theme.Vizbee.Custom.DeviceStatusViewLabelStyle</item>

        <!-- Device List view -->
        <item name="vzb_deviceListItemViewStyle">@style/Theme.Vizbee.Custom.DeviceListItemViewStyle</item>
        <item name="vzb_deviceListItemViewPhoneStyle">@style/Theme.Vizbee.Custom.DeviceListItemViewStyle.Phone</item>
        <item name="vzb_deviceListItemViewOverlayStyle">@style/Theme.Vizbee.Custom.DeviceListItemViewStyle</item>
        <item name="vzb_deviceListItemViewPhoneOverlayStyle">@style/Theme.Vizbee.Custom.DeviceListItemViewStyle.Phone</item>

        <!-- Playback controls -->
        <item name="vzb_contentStatusViewStyle">@style/Theme.Vizbee.Custom.PlayerBufferingStyle</item>

        <!-- Device Info view -->
        <item name="vzb_deviceInfoViewStyle">@style/Theme.Vizbee.Custom.DeviceInfoViewStyle</item>
        <item name="vzb_deviceInfoViewIconStyle">@style/Theme.Vizbee.Custom.DeviceInfoViewIconStyle</item>
        <item name="vzb_deviceInfoViewNameLabelStyle">@style/Theme.Vizbee.Custom.DeviceInfoViewLabelStyle</item>

    </style>

